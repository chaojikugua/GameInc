{
// Events Collection
"Collection": [
    // Company money-related events
    {
        "id": "Company_Bankrupcy",
        "name": "Bankrupcy !",
        "descriptionEnglish" : """
Looks like you're in troubles !

Just this once, the government will bail you out with {@Company.BailOut.Amount}k.

Be careful now, next time will be game over...
""",
        "variables": [ "@Company.BailOut.Trigger = -200", "@Company.BailOut.Amount = 400" ],
        "triggerConditions" : [ "$Company.NeverBailedOut == true", "$Company.Money < @Company.BailOut.Trigger" ],
        "triggerActions" : [ "$Company.NeverBailedOut = false", "$Company.Money += @Company.BailOut.Amount" ],
        "triggerLimit": "1",
    },

    // Test events
    {
        "id": "TitleTest",
        "name": "Formatted Title Test ! Result = {3 * @Test.TitleTest}.",
        "descriptionEnglish": "Title Test.",
        "variables": ["@Test.TitleTest = 1"],
        "triggerConditions": ["$World.CurrentDate.Day == 4"],
        "triggerActions": [],
        "triggerLimit": "1",
    },
    {
        "id": "Test",
        "name": "Test !",
        "descriptionEnglish" : "Test event 2 triggered ! Trigger day variable = {@Test.Trigger}.",
        "variables": [
            "@Test.EngineFeatureStereo = 2",
            "@Test.Trigger = 2 * $World.CurrentDate.Month + 1e2 / 100 * 0.1 * 10 + 1 / 3 * (2 + 4 / 1 - 3)", // maths test
            "@Test.Limit = 2"
        ],
        "triggerConditions" : [ "$World.CurrentDate.Day == 2 * @Test.Trigger - 1 " ],
        "triggerActions" : [ "@Test.Trigger += (4 + 2 * 3) / 2" ],
        "triggerLimit": "2 * $World.CurrentDate.Month",
    },
    {
        "id": "Limit1",
        "name": "Limit 1!",
        "descriptionEnglish" : "Limit 1 Event triggered ! Limit = {@Limit}.",
        "variables": ["@Limit = -1"],
        "triggerConditions" : [ "$World.CurrentDate.DayOfWeek == 3" ],
        "triggerActions" : [ "@Limit = 1" ],
        "triggerLimit": "1",
    },
    {
        "id": "Limit2",
        "name": "Limit 2",
        "descriptionEnglish" : "Limit 2 Event triggered ! Limit = {@Limit}.",
        "variables": [],
        "triggerConditions" : [ "$World.CurrentDate.DayOfWeek <= 2 * 3 / 2" ],
        "triggerActions" : [],
        "triggerLimit": "@Limit",
    },
    {
        "id": "MathTest",
        "name": "Math Functions Test Event",
        "descriptionEnglish": """
x = {@x} rad
3 * x = {3 * @x} rad
cos({@x}) = {Math.Cos(@x)}
sin({@x}) = {Math.Sin(@x)}
tan({@x}) = {Math.Tan(@x)}

y = {@y}
-6 * y = {-6 * @y}
abs(y) = {Math.Abs(@y)}
""",
        "variables": [ "@x = 45 * Math.PI / 180", "@y = -3" ],
        "triggerConditions" : [ "$World.CurrentDate.DayOfWeek == 5" ],
        "triggerActions": [],
        "triggerLimit": "1",
    },

    // Engine-related events
    {
        "id": "Company_Engine_CanDevelop",
        "name": "Custom Engine development unlocked !",
        "descriptionEnglish" : "Having completed {@Engine.CanDevelop.MinGames} games, you can now develop your own Game Engine !",
        "variables": [ "@Engine.CanDevelop.MinGames = 0" ],
        "triggerConditions" : [
            "$Company.Projects.CompletedGames.Count >= @Engine.CanDevelop.MinGames",
            "$World.CurrentDate.Month >= 2",
        ],
        "triggerActions" : [ "Company.EnableFeature(Engine.CanDevelop)" ],
        "triggerLimit": "1",
    },
],
}
